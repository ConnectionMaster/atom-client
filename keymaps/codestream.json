{
	".platform-darwin atom-workspace, .platform-linux atom-text-editor": {
		"ctrl-/ ctrl-/": "codestream:toggle",
		"ctrl-/ w": "codestream:start-work"
	},
	".platform-win32 atom-workspace": {
		"ctrl-shift-/ /": "codestream:toggle",
		"ctrl-shift-/ w": "codestream:start-work"
	},
	".platform-darwin atom-text-editor, .platform-linux atom-text-editor": {
		"ctrl-/ c": "codestream:keymap-create-comment",
		"ctrl-/ i": "codestream:keymap-create-issue",
		"ctrl-/ p": "codestream:keymap-get-permalink",
		"ctrl-/ shift-p": "codestream:keymap-copy-permalink"
	},
	".platform-win32 atom-text-editor": {
		"ctrl-shift-/ c": "codestream:keymap-create-comment",
		"ctrl-shift-/ i": "codestream:keymap-create-issue",
		"ctrl-shift-/ p": "codestream:keymap-get-permalink",
		"ctrl-shift-/ shift-p": "codestream:keymap-copy-permalink"
	}
}
